@model ExerciceMVC.Models.Contact
@{
    ViewData["Title"] = "Ajouter un Contact";
}

<div class="container mt-5">
    <h1>➕ Ajouter un Nouveau Contact</h1>
    <form asp-action="Add" method="post" class="mt-3">
        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" placeholder="Nom complet" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Email" class="form-label"></label>
            <input asp-for="Email" type="email" class="form-control" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Phone" class="form-label"></label>
            <input asp-for="Phone" class="form-control" placeholder="Téléphone" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">✅ Enregistrer</button>
        <a asp-action="Index" class="btn btn-secondary">❌ Annuler</a>
    </form>
</div>
