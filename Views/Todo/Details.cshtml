@model ExerciceMVC.Models.Todo

@{
    ViewData["Title"] = "Details";
}

<h1>Détails de la tâche</h1>

<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Statut</dt>
        <dd class="col-sm-10">@Model.status</dd>
    </dl>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Modifier</a>
    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline;">
        <button type="submit" class="btn btn-danger">Supprimer</button>
    </form>
    <a asp-action="Index" class="btn btn-secondary">Retour à la liste</a>
</div>
